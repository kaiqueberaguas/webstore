<form>

    <div class="form-group row">

        <label for="inputEmail4" class="col-sm-2 col-form-label">Nome</label>
        <div class="col-sm-10">
            <input @bind="Category.Name" type="text" placeholder="Nome da categoria" style="margin-bottom: 3%; padding: 3%" maxlength="25" class="form-control" id="name">
        </div>

        <label for="inputEmail4" class="col-sm-2 col-form-label">Descrição</label>
        <div class="col-sm-10">
            <input @bind="Category.Description" type="text" placeholder="Descrição da categoria" style="margin-bottom:3%;padding:3%" maxlength="100" class="form-control" id="description">
        </div>
        <div class="btn-group">
            <button type="submit" class="btn btn-primary" style="padding:2%; margin:2%" @onclick="RegisterNewCategory">Salvar</button>
            <button type="submit" class="btn btn-primary" style="padding:2%; margin:2%">Cancelar</button>
        </div>
    </div>
</form>

@inject CategoryPageService _categoryPageService;
@code {

    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; }

    public Category Category { get; set; } = new Category();
    bool ShowForm { get; set; } = true;
    int FormId { get; set; }

    void SubmitForm()
    {

        BlazoredModal.Close();
    }

    private async Task RegisterNewCategory()
    {
        await _categoryPageService.Create(Category);
    }

    void Cancel()
    {
        BlazoredModal.Cancel();
    }

}
